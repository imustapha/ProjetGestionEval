@model ProjetGestionEval.critere

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}


<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Critere/Index">Liste des Critere</a>
        <i class="fa fa-circle"></i>
        <a href="~/Critere/Create">Ajouter</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus-square"></i>Projet
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="javascript:;" class="reload">
            </a>
            <a href="javascript:;" class="remove">
            </a>
        </div>
    </div>

<div class="portlet-body form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          <br><br/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IDFAMILLECRITERE, "Famille Critére", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IDFAMILLECRITERE", ViewBag.IdCritereFamille as SelectList,"Selectionner la Famille du Critere", htmlAttributes: new { @class = "form-control" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Nom Critére</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" name="NOMCRITERE"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default green" />
                    <a href="@Html.Action("Index")" class="btn default">Retour</a>
                </div>
            </div>
        </div>
    }

    <div>
        
    </div>
    </div>
</div>