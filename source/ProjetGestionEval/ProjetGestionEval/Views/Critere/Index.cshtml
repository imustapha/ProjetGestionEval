@model IEnumerable<ProjetGestionEval.critere>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Critere/Index">Liste des Critéres</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>

<div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box blue-chambray">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cubes"></i>Liste des Critéres
            </div>

        </div>
        <div class="portlet-body">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">


                        <div class="clearfix">
                            <a href="@Url.Action("Create")" id="sample_editable_1_new" class="btn blue-chambray"> Creer <i class="fa fa-plus"></i></a>
                        </div>


                    </div>

                </div>
            </div>
            <table class="table table-striped table-bordered table-hover" id="sample_2">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Nom Critére
                            
                        </th>
                        <th>
                            Nom Famille Critére
                           
                        </th>
                        <th><center>##### Action #####</center></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMCRITERE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.famillecritere.NOMFAMILLECRITERE)
                            </td>
                            <td>
                                <center>
                                    <a href="@Url.Action("Edit", new { id = item.IDCRITERE })" id="sample_editable_1_new" class="btn green" title="Modifier"> <i class="glyphicon glyphicon-pencil"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.IDCRITERE })" id="sample_editable_1_new" class="btn red" title="Supprimer"> <i class="glyphicon glyphicon-trash"></i></a>
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>

