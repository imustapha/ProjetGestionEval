@using Microsoft.AspNet.Identity
@model ProjetGestionEval.Models.ManageUserViewModel

<p>Vous êtes connecté en tant que <strong>@User.Identity.GetUserName()</strong>.</p>

<div class="col-md-8">
    <!-- BEGIN VALIDATION STATES-->
    <div class="portlet light">
        <div class="portlet-title tabbable-line">
            <div class="caption caption-md">
                <i class="icon-globe theme-font hide"></i>
                <span class="caption-subject font-blue-madison bold uppercase">Change Password</span>
            </div>
            <ul class="nav nav-tabs">

                <li>
                    <a href="#tab_1_3" data-toggle="tab">Formulaire de modification du mot de passe</a>

                </li>
            </ul>
        </div>
        <div class="tab-pane" id="tab_1_3">
            @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">

                    @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
                <!-- <div class="margin-top-10">
                    <a href="javascript:;" class="btn green-haze">
                    Change Password </a>
                    <a href="javascript:;" class="btn default">
                    Cancel </a>
                </div> -->
													<!-- <input type="submit" value="Modifier le mot de passe" class="btn btn-default" /> -->
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green-haze">Modifier le mot de passe</button>
                            <a href="@Url.Action("Index")" class="btn default">Retour</a>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
