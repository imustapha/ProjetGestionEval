@model IEnumerable<ProjetGestionEval.collaborateur>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Acceuil</a>
        <i class="fa fa-circle"></i>
        <a href="~/CollaborateurTitulaire/Index">Liste des Collaborateur Titulaires</a>
        <i class="fa fa-circle"></i>

    </li>

</ul>


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue-madison">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>List des collaborateur Titulaire
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">


                            <div class="clearfix">
                                <a href="@Url.Action("Create")" id="sample_editable_1_new" class="btn green">Creer <i class="fa fa-plus"></i></a>
                            </div>


                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>
                        <tr>
                            <th>
                                Nom
                            </th>
                            <th>
                                Prenom
                            </th>
                            <th>
                                Evaluateur
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Date d'embauche
                            </th>
                            <th>
                                Date Sortie
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Fonction
                            </th>
                            <th class="col-md-3"><center>###### Action #####</center></th>
                        </tr>
                    </thead>
                    <tbody>



                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PRENOM)
                                </td>
                                <td>
                                    @{
                            string xy = "";
                            if (item.FLAGEVAL == true)
                            {
                                xy = "Oui";
                            }
                            else if (item.FLAGEVAL == false)
                            {
                                xy = "Non";
                            }
                            }
                                   <center>@xy</center>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TYPECOLLABORATEUR)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DATEEMBAUCHE.Day)/@Html.DisplayFor(modelItem => item.DATEEMBAUCHE.Month)/@Html.DisplayFor(modelItem => item.DATEEMBAUCHE.Year)
                                </td>
                                <td>
                                    @{var xx = "";
                                      if (item.DATESORTIE != null)
                                      {
                                          xx = @Html.DisplayFor(modelItem => item.DATESORTIE.Value.Day) + "/" + @Html.DisplayFor(modelItem => item.DATESORTIE.Value.Month) + "/" + @Html.DisplayFor(modelItem => item.DATESORTIE.Value.Year);

                                      }
                                    }
                                    @xx
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.aspnetusers.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fonction.NOMFONCTION)
                                </td>
                                <td>
                                    <div class=" clearfix">

                                        <center>
                                            <a href="@Url.Action("Edit", new { id = item.IDCOLLABORATEUR })" id="sample_editable_1_new" class="btn green"> <i class="glyphicon glyphicon-pencil"></i></a>
                                            <a href="@Url.Action("Details", new { id = item.IDCOLLABORATEUR })" id="sample_editable_1_new" class="btn yellow"> <i class="glyphicon glyphicon-list-alt"></i></a>
                                            <a href="@Url.Action("Delete", new { id = item.IDCOLLABORATEUR})" id="sample_editable_1_new" class="btn red"> <i class="glyphicon glyphicon-trash"></i></a>
                                        </center>

                                    </div>

                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>