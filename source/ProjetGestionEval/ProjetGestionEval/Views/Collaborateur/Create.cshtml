@model ProjetGestionEval.Models.RegisterViewModel

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>


        <a href="~/Home/Accueil">Acceuil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Collaborateur/Index">Liste des Collaborateur</a>
        <i class="fa fa-circle"></i>
        <a href="~/Collaborateur/Create">Create</a>
        <i class="fa fa-circle"></i>
    </li>


</ul>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Advance Validation
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="Create" method="Post" id="form_sample_3" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            You have some form errors. Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Le Collaborateur a ete ajouter avec succes
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                Email
                            </label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    @Html.TextBoxFor(M => M.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Mots de Passe<span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Confirme Mots de Passe<span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password", @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Nom <span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    @Html.TextBoxFor(M => M.NOM, new { @class = "form-control", required = "required" })

                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Prenom <span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    @Html.TextBoxFor(M => M.PRENOM, new { @class = "form-control", required = "required" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                Photo <span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    @Html.TextBoxFor(Model => Model.File, new { type = "file" })

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Date d'embauche</label>
                            <div class="col-md-3">
                                <input class="form-control form-control-inline input-medium date-picker" name="DATEEMBAUCHE" size="16" type="text" value="" />
                                <span class="help-block">
                                    Select date
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Date sortie</label>
                            <div class="col-md-3">
                                <input class="form-control form-control-inline input-medium date-picker" name="DATESORTIE" size="16" type="text" value="" />
                                <span class="help-block">
                                    Select date
                                </span>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Fonction <span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(M => M.IDFONCTION, ViewBag.IDFONCTION as SelectList, "Selectionner la fonction", htmlAttributes: new { @Class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Collaborateur
                            </label>
                            <div class="col-md-4">
                                <div class="radio-list" data-error-container="#form_2_membership_error">
                                    <label>
                                        @Html.RadioButtonFor(M => M.TYPECOLLABORATEUR, "Freelance", new { @class = "enable_tb", Checked = "checked" })
                                        Freelance
                                    </label>
                                    <label>
                                        @Html.RadioButtonFor(M => M.TYPECOLLABORATEUR, "Titulaire")
                                        Titulaire
                                    </label>
                                    <label>
                                        @Html.RadioButtonFor(M => M.TYPECOLLABORATEUR, "Periode d'esseai", new { @class = "enable_tb" })
                                        Periode d'esseai
                                    </label>
                                </div>
                                <div id="form_2_membership_error">
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Evaluateur
                            </label>
                            <div class="col-md-4">
                                <div class="radio-list"  data-error-container="#form_2_membership_error">
                                    <label>
                                        @Html.RadioButtonFor(M => M.FLAGEVAL, true, htmlAttributes: new { id="otherDevText", @disabled = "disabled" })
                                        Oui
                                    </label>
                                    <label>
                                        @Html.RadioButtonFor(M => M.FLAGEVAL, false, htmlAttributes: new { id="otherDevText2", @disabled = "disabled" })
                                        Non
                                    </label>
                                </div>
                                <div id="form_2_membership_error">
                                </div>
                            </div>
                        </div>
                       
                            

                        
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Submit</button>
                                <button type="reset" class="btn red">Cancel</button>
                                <a href="@Url.Action("Index")" class="btn default">Retour</a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
            <!-- END VALIDATION STATES-->
        </div>
    </div>
</div>
