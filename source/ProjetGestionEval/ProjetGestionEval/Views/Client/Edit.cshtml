@model ProjetGestionEval.client

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Client/Index">Liste des fonctions</a>
        <i class="fa fa-circle"></i>
        <a href="~/Client/Edit/@Model.IDCLIENT">Modifier</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>
<div class="row">
    <div class="col-md-12">




        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-equalizer font-green-sunglo"></i>


                    <span class="caption-subject font-green-sunglo bold uppercase">Client</span>
                </div>

            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IDCLIENT)
                        <div class="form-body">


                            <div class="form-group">
                                @Html.LabelFor(model => model.ABREVIATION, "Abréviation du client", htmlAttributes: new { @class = "col-md-3 control-label" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.ABREVIATION, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ABREVIATION, "", new { @class = "text-danger" })
                                </div>
                            </div>






                        </div>


                        <div class="form-actions">
                            <div class="row">

                                <div class="col-md-offset-3 col-md-9">
                                    
                                        <input type="submit" value="Sauvegarder" class="btn green" />@Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn default" })

                                  
                                </div>

                            </div>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
