@model ProjetGestionEval.client

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Client/Index">Liste des clients</a>
        <i class="fa fa-circle"></i>
        <a href="~/Client/Delete/@Model.IDCLIENT">Supprimer</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>
<div class="row">
    <div class="col-md-12">

        <h3>Êtes-vous sûr de vouloir supprimer ce client?</h3>


        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-equalizer font-red-sunglo"></i>


                    <span class="caption-subject font-red-sunglo bold uppercase">Client</span>
                </div>

            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
@using (Html.BeginForm("Delete", "Client", FormMethod.Post, new { htmlAttributes = new { @class = "form-horizontal"} }))
                            {
    @Html.AntiForgeryToken()

                @*<form action="#" class="form-horizontal">*@
                    <div class="form-body">

                        <div class="form-group">
                            @Html.LabelFor(model => model.ABREVIATION, "Abréviation du client", htmlAttributes: new { @class = "col-md-3 control-label" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.ABREVIATION, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                            </div>
                            @Html.ValidationMessageFor(model => model.ABREVIATION, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <br />
                        <br />
                       </div>
                    <div class="form-actions">
                        <div class="row">
                           
                                  
                                    <div class="col-md-offset-3 col-md-9">
                                        <div class="form-actions no-color">
                                            <input type="submit" value="Supprimer" class="btn red-haze" />@Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn default" })

                                        </div>
                                    </div>
                                
                          
                            
                        </div>
                    </div>
                @*</form>*@
     }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>


