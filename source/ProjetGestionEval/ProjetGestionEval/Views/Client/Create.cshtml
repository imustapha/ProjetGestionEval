@model ProjetGestionEval.client

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Fonction/Index">Liste des clients</a>
        <i class="fa fa-circle"></i>
        <a href="~/Fonction/Create">Ajouter un nouveau client</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Client
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>


                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="Create" method="Post" id="form_sample_3" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-body">

                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            Vous avez des champs qu'ils sont vide.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Ajout du client réussi!
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">
                                Abréviation du client <span class="required">
                                    *
                                </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    @Html.TextBoxFor(M => M.ABREVIATION, new { @class = "form-control", required = "required" })

                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Ajouter</button>
                                <a href="@Url.Action("Index")" class="btn default">Retour</a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
            <!-- END VALIDATION STATES-->
        </div>
    </div>
</div>


