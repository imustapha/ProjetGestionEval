@model ProjetGestionEval.tache

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Tache/Index">Liste des Tache</a>
        <i class="fa fa-circle"></i>
        <a href="~/Tache/Edit/@Model.IDTACHE">Modifier</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>

<div class="col-md-12">
    <!-- BEGIN VALIDATION STATES-->
    <div class="portlet light bordered">

        <div class="caption">
            <i class="icon-paper-clip font-red-sunglo"></i>
            <span class="caption-helper">La Tache</span>
            <span class="caption-subject font-red-sunglo bold uppercase">@Model.NOMTACHE</span>

        </div>


        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        You have some form errors. Please check below.
                    </div>
                    <div class="alert alert-success display-hide">
                        <button class="close" data-close="alert"></button>
                        Le Collaborateur a ete ajouter avec succes
                    </div>






                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.NOMTACHE, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.NOMTACHE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NOMTACHE, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">

                            <label class="control-label col-md-3">Réaliser Par</label>
                            <div class="col-md-4">

                                @Html.DropDownListFor(m => m.IDCOLLABORATEUR, ViewBag.Collaborateur as SelectList, htmlAttributes: new { @Class = "bs-select form-control", required = "required" })

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Collaborateur en Esseai</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.IDPROJET, ViewBag.Projet as SelectList, "Selectionner le Projet", htmlAttributes: new { @Class = "bs-select form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Date Debut Tache</label>
                            <div class="col-md-3">
                                <div class="input-group input-medium date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    <input type="text" class="form-control" value=@Model.DATEDEBUTTACHE name="DATEDEBUTTACHE">
                                    <span class="input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <!-- /input-group -->
                                <span class="help-block">
                                    Select date
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Date Fin Tache</label>
                            <div class="col-md-3">
                                <div class="input-group input-medium date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    <input type="text" class="form-control" value=@Model.DATEFINTACHE name="DATEFINTACHE">
                                    <span class="input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <!-- /input-group -->
                                <span class="help-block">
                                    Select date
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" id="" class="btn green">Save</button>
                        <a href="@Url.Action("Index")" class="btn default">Retour</a>
                    </div>
                </div>

                <div>
                    <span><br></span>
                </div>
            }
            <!-- END FORM-->
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>