@model IEnumerable<ProjetGestionEval.tache>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>
        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Tache/Index">Liste des Taches</a>
        <i class="fa fa-circle"></i>
    </li>
</ul>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue-madison">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Liste des Taches
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">


                            <div class="clearfix">
                                <a href="@Url.Action("Create")" id="sample_editable_1_new" class="btn blue-madison">Creer <i class="fa fa-plus"></i></a>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="sample_2">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                Nom de Tache
                            </th>
                            <th>
                                Date debut de tache
                            </th>
                            <th>
                                Date fin de tache
                            </th>
                            <th>
                                Réaliser par le collaborateur
                            </th>
                            <th>
                                Projet
                            </th>
                            <th class="col-md-3"><center>###### Action #####</center></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMTACHE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DATEDEBUTTACHE.Value.Day)/@Html.DisplayFor(modelItem => item.DATEDEBUTTACHE.Value.Month)/@Html.DisplayFor(modelItem => item.DATEDEBUTTACHE.Value.Year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DATEFINTACHE.Value.Day)/@Html.DisplayFor(modelItem => item.DATEFINTACHE.Value.Month)/@Html.DisplayFor(modelItem => item.DATEFINTACHE.Value.Year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.collaborateur.NOM)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.projet.NOMPROJET)
                                </td>
                                <td>
                                    <center>
                                        <a href="@Url.Action("Edit", new { id = item.IDTACHE })" id="sample_editable_1_new" class="btn green" title="Modifier"> <i class="glyphicon glyphicon-pencil"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.IDTACHE })" id="sample_editable_1_new" class="btn yellow" title="Détails"> <i class="glyphicon glyphicon-list-alt"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.IDTACHE })" id="sample_editable_1_new" class="btn red" title="Supprimer"> <i class="glyphicon glyphicon-trash"></i></a>
                                    </center>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>