@model ProjetGestionEval.projet

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Projet/Index">Liste des projets</a>
        <i class="fa fa-circle"></i>
        <a href="~/Projet/Delete/@Model.IDPROJET">Supprimer</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>
<div class="row">
    <div class="col-md-12">

        <h3>Êtes-vous sûr de vouloir supprimer ce projet?</h3>


        <div class="tab-pane" id="tab_3">
            <div class="portlet box red">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Projet
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                        <a href="#portlet-config" data-toggle="modal" class="config">
                        </a>
                        <a href="javascript:;" class="reload">
                        </a>
                        <a href="javascript:;" class="remove">
                        </a>
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->

                    <div class="form-horizontal" role="form">
                        <div class="form-body">
                            <h2 class="margin-bottom-20">Projet de - @Model.client.ABREVIATION </h2>
                            <h3 class="form-section">Info de projet</h3>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Nom du projet :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">
                                                @Html.DisplayFor(model => model.NOMPROJET)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Client :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">
                                                @Html.DisplayFor(model => model.client.ABREVIATION)
                                            </p>
                                        </div>
                                    </div>


                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Date debut :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">
                                                @Html.DisplayFor(model => model.DATEDEBUT.Value.Day)/@Html.DisplayFor(model => model.DATEDEBUT.Value.Month)/@Html.DisplayFor(model => model.DATEDEBUT.Value.Year)
                                            </p>
                                        </div>
                                    </div>

                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Date fin :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">
                                                @Html.DisplayFor(model => model.DATEFIN.Value.Day)/@Html.DisplayFor(model => model.DATEFIN.Value.Month)/@Html.DisplayFor(model => model.DATEFIN.Value.Year)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Collaborateur titulaire:</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">

                                                @{var y = "";
                                                foreach (var colab in Model.collaborateur)
                                                {
                                                    if (colab.TYPECOLLABORATEUR == "Titulaire")
                                                    {
                                                        y = colab.NOM + " " + colab.PRENOM;
                                                        @y<br />
                                                    }

                                                }
                                                }

                                            </p>
                                        </div>
                                    </div>

                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Collaborateur P.E :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">

                                                @{var d = "";
                                                foreach (var colab in Model.collaborateur)
                                                {
                                                    if (colab.TYPECOLLABORATEUR == "P.E")
                                                    {
                                                        d = colab.NOM + " " + colab.PRENOM;
                                                        @d<br />
                                                    }
                                                }
                                                }

                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Type projet :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">
                                                @{var x = "";
                                                if (Model.TYPE == 2) { x = "Régie"; }
                                                else if (Model.TYPE == 1) { x = "TMA"; }
                                                else { x = "Forfait"; }
                                                }
                                                @x
                                            </p>
                                        </div>
                                    </div>

                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Interne/Externe :</label>
                                        <div class="col-md-9">
                                            <p class="form-control-static">
                                                @{var h = "";
                                                if (Model.FLAGTYPE == true)
                                                {
                                                    h = "Interne";
                                                }
                                                else
                                                {
                                                    h = "Externe";
                                                }
                                                }
                                                @h
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>
                            <!--/row-->
                            <!--/row-->

                        </div>
                        @*<div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                @Html.ActionLink("Modifier", "Edit", new { id = Model.IDPROJET }, new { @class = "btn green" })
                                                @Html.ActionLink("Retour à la liste", "Index", null, new { @class = "btn default" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                </div>
                            </div>*@
                    </div>
                    
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            @Html.Label(" ", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div>
                                <input type="submit" value="Supprimer" class="btn red" />
                                @Html.ActionLink("Retour", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                            </div>
                        </div>
                    }

                    <!-- END FORM-->
                </div>
            </div>
        </div>

    </div>
</div>