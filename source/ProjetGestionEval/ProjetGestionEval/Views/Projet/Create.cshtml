@model ProjetGestionEval.projet

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/Projet/Index">Liste des projets</a>
        <i class="fa fa-circle"></i>
        <a href="~/Projet/Create">Ajouter</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>
<div class="col-md-12">
    <!-- BEGIN VALIDATION STATES-->
    <div class="portlet box red">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-plus-square"></i>Projet
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
                <a href="#portlet-config" data-toggle="modal" class="config">
                </a>
                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="Create" method="Post" id="form_sample_3" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-body">
                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        Vous avez oubliez des champs. Veuillez s'il vous plait revérifier.
                    </div>
                    <div class="alert alert-success display-hide">
                        <button class="close" data-close="alert"></button>
                        Le projet a ete ajouter avec succes
                    </div>






                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<div class="form-group">
                                @Html.LabelFor(model => model.IDCLIENT, "IDCLIENT", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("IDCLIENT", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IDCLIENT, "", new { @class = "text-danger" })
                                </div>
                            </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.NOMPROJET, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.NOMPROJET, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NOMPROJET, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            <label class="control-label col-md-3">Collaorateur titulaire</label>
                            <div class="col-md-4">

                                @Html.ListBoxFor(m => m.collaborateur, ViewBag.collaborateur as MultiSelectList, htmlAttributes: new { @Class = "bs-select form-control", @multiple = "multiple", required = "required" })

                            </div>

                        </div>

                        <div class="form-group">

                            <label class="control-label col-md-3">Collaorateur P.E</label>
                            <div class="col-md-4">

                                @Html.ListBoxFor(m => m.collaborateur, ViewBag.collaborateurpe as MultiSelectList, htmlAttributes: new { @Class = "bs-select form-control", @multiple = "multiple", required = "required" })

                            </div>

                        </div>

                        @*<div class="form-group">
                            <label class="control-label col-md-3">Collaborateur en Esseai</label>
                            <div class="col-md-4">
                                @Html.ListBoxFor(m => m.collaborateurpe, ViewBag.collaborateurpe as MultiSelectList, htmlAttributes: new { @Class = "bs-select form-control", @multiple = "multiple", required = "required" })
                            </div>
                        </div*@>
                        <div class="form-group">
                            <label class="control-label col-md-3">Client Du Projet</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.IDCLIENT, ViewBag.Client as SelectList, "Selectionner le Client", htmlAttributes: new { @Class = "form-control", required = "required" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Date Debut Projet</label>
                            <div class="col-md-3">
                                <div class="input-group input-medium date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    <input type="text" class="form-control" name="DATEDEBUT">
                                    <span class="input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <!-- /input-group -->
                                <span class="help-block">
                                    Select date
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Date Fin Projet</label>
                            <div class="col-md-3">
                                <div class="input-group input-medium date date-picker" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    <input type="text" class="form-control" name="DATEFIN">
                                    <span class="input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                                <!-- /input-group -->
                                <span class="help-block">
                                    Select date
                                </span>
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(model => model.TYPE, "Type de Projet", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-5">
                                <div class="md-radio-inline">
                                    <div class="md-radio">
                                        <input type="radio" id="radio53" name="TYPE" value="2" class="md-radiobtn">
                                        <label for="radio53">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span>
                                            Régie
                                        </label>
                                    </div>

                                    <div class="md-radio">
                                        <input type="radio" id="radio54" name="TYPE" value="1" class="md-radiobtn" checked>
                                        <label for="radio54">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span>
                                            TMA
                                        </label>
                                    </div>
                                    <div class="md-radio">
                                        <div class="md-radio">
                                            <input type="radio" id="radio55" name="TYPE" value="0" class="md-radiobtn">
                                            <label for="radio55">
                                                <span></span>
                                                <span class="check"></span>
                                                <span class="box"></span>
                                                Forfait
                                            </label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Projet</label>
                            <div class="col-md-5">
                                <div class="md-radio-inline">
                                    <div class="md-radio">
                                        <input type="radio" id="radio56" name="FLAGTYPE" value=true class="md-radiobtn">
                                        <label for="radio56">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span>
                                            Interne
                                        </label>
                                    </div>

                                    <div class="md-radio">
                                        <div class="md-radio">
                                            <input type="radio" id="radio57" name="FLAGTYPE" value=false class="md-radiobtn" checked>
                                            <label for="radio57">
                                                <span></span>
                                                <span class="check"></span>
                                                <span class="box"></span>
                                                Externe
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Sauvegarder</button>
                            
                            <a href="@Url.Action("Index")" class="btn default">Retour</a>
                        </div>
                    </div>
                </div>

            </form>
            <!-- END FORM-->
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>